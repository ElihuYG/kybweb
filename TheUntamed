    <!-- Lista de episodios -->
    <div>
      <h2 class="text-xl font-bold mb-2 text-emerald-400">Episodios</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <!-- Genera episodios -->
        <script>
          const episodes = 50;
          for (let i = 1; i <= episodes; i++) {
            document.write(`<a href="#" class="episode block p-4 rounded bg-slate-800 text-center transition">The Untamed 1x${i}</a>`);
          }
        </script>
      </div>
    </div>
  </main>

  <script>
    const listBtn = document.getElementById('addToList');
    listBtn.addEventListener('click', () => {
      const series = JSON.parse(localStorage.getItem('miLista')) || [];
      if (!series.includes('The Untamed')) {
        series.push('The Untamed');
        localStorage.setItem('miLista', JSON.stringify(series));
        alert('Agregado a Mi Lista ✅');
      } else {
        alert('Ya está en tu lista');
      }
    });

    const rateBtn = document.getElementById('rate');
    rateBtn.addEventListener('click', () => {
      const rating = prompt('¿Qué puntuación le das del 1 al 5?');
      if (rating >= 1 && rating <= 5) {
        alert(`Gracias por tu valoración de ${rating} ⭐`);
      } else {
        alert('Puntuación inválida');
      }
    });
  </script>
